<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/home"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/drawer_white" />


    <RelativeLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BFFFFFFF"
        android:elevation="4dp"
        android:minHeight="120dp"

        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        app:behavior_peekHeight="120dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:weightSum="1">

        <TextView
            android:id="@+id/sheetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Prime to Pay"
            android:textAllCaps="false"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp" />

        <View
            android:layout_below="@id/sheetTitle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingTop="5dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/sheetSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sheetTitle"
            android:layout_marginTop="5dp"
            android:text="Show below QR code to the cashier"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sheetkartu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sheetSubtitle"
            android:text="Kartu Satu"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/sheetbalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sheetkartu"
            android:text="Balance"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/sheetbeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sheetbalance"
            android:text="Beans"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            app:srcCompat="@drawable/static_qr_code_without_logo"
            android:layout_below="@+id/txtbeans"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/txtbeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtbalance"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtbalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sheetkartu"
            android:text="TextView"
            android:textSize="12sp" />




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/txttopbeans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txttopbalance"
            android:text="N/A"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txttopbalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txttopnama"
            android:text="N/A"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txttopnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txttopgreet"
            android:text="N/A"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txttopgreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="42dp"
            android:text="N/A"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>